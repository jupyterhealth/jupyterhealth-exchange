{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://w3id.org/ieee/ieee-1752-schema/frequency-unit-value.json",
    "title": "Unit of Frequency and Value",
    "description": "This schema represents the frequency of an event in hertz (cycles per second) or as number of times over a duration or duration range, e.g., 1/14 d meaning once every 14 days, or a duration range.",
    "type": "object",
    "references": [
        {
            "description": "The SNOMED code represents Frequency (quantitative concept)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/260864003"
        }
    ],
    "definitions": {
        "unit_value": {
            "$ref": "unit-value-1.0.json"
        },
        "duration": {
            "$ref": "duration-unit-value-1.0.json"
        },
        "duration_range": {
            "$ref": "duration-unit-value-range-1.0.json"
        }
    },
    "oneOf": [
        {
            "allOf": [
                {
                    "$ref": "#/definitions/unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "references": [
                                {
                                    "description": "The unit of measure: Basic unit is hertz (Hz).",
                                    "url": "http://unitsofmeasure.org/ucum.html#para-30"
                                }
                            ],
                            "enum": [
                                "Hz"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "properties": {
                "number_of_times": {
                    "definition": "How many times the event occurs or should occur in the time window: e.g., in twice a day every other day --> 2 times in 1 day every 2 days, number of times is 2",
                    "type": "number"
                },
                "time_window": {
                    "definition": "Time window in which the event occurs or should occur: e.g., in twice a day every other day --> 2 times in 1 day every 2 days, time window is 1 day",
                    "oneOf": [
                        {
                            "$ref": "#/definitions/duration"
                        },
                        {
                            "$ref": "#/definitions/duration_range"
                        }
                    ]
                }
            },
            "required": [
                "number_of_times",
                "time_window"
            ]
        }
    ]
}
