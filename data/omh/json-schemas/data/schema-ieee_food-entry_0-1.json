{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Food Entry",
    "description": "This schema represents a food entry as a named food and the quantity that was consumed + time",
    "type": "object",
    "definitions": {
        "unit_value": {
            "$ref": "unit-value-1.0.json"
        },
        "mass_unit_value": {
            "$ref": "mass-unit-value-0.1.json"
        },
        "volume_unit_value": {
            "$ref": "volume-unit-value-0.1.json"
        },
        "kcal_unit_value": {
            "$ref": "kcal-unit-value-1.0.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.0.json"
        }
    },
    "properties": {
        "food_name": {
            "type": "string"
        },
        "food_amount": {
            "description": "number + units of mass or volume, or number only",
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/definitions/mass_unit_value"
                },
                {
                    "$ref": "#/definitions/volume_unit_value"
                },
                {
                    "$ref": "#/definitions/unit_value"
                }
            ]
        },
        "meal": {
            "enum": [
                "breakfast",
                "lunch",
                "dinner",
                "snack"
            ]
        },
        "protein": {
            "$ref": "#/definitions/mass_unit_value"
        },
        "carbohydrate": {
            "$ref": "#/definitions/mass_unit_value"
        },
        "fat": {
            "$ref": "#/definitions/mass_unit_value"
        },
        "saturated_fat": {
            "$ref": "#/definitions/mass_unit_value"
        },
        "cholesterol": {
            "$ref": "#/definitions/mass_unit_value"
        },
        "sodium": {
            "$ref": "#/definitions/mass_unit_value"
        },
        "potassium": {
            "$ref": "#/definitions/mass_unit_value"
        },
        "fiber": {
            "$ref": "#/definitions/mass_unit_value"
        },
        "sugar": {
            "$ref": "#/definitions/mass_unit_value"
        },
        "calories": {
            "$ref": "#/definitions/kcal_unit_value"
        },
        "effective_time_frame": {
            "description": "time food consumed",
            "oneOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "properties": {
                        "full_date": {
                            "type": "string",
                            "references": [
                                {
                                    "description": "This schema represents a date. See RFC 3339 5.6 for details.",
                                    "url": "http://tools.ietf.org/html/rfc3339"
                                }
                            ],
                            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                        }
                    },
                    "required": ["full_date"]
                }
            ]
        }
    },
    "required": [
        "food_name",
        "food_amount",
        "effective_time_frame"
    ]
}
